<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/close_activity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/close_icon">
            </ImageView>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Settings"
                android:fontFamily="@font/baloo_bhai"
                android:textColor="@color/ultra_white"
                android:textSize="24sp"
                android:layout_gravity="center">
            </TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buy_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRO"
                android:layout_marginRight="10dp"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="2sp">
            </com.google.android.material.button.MaterialButton>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/free_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Hi there, thanks for using my app!\nYou are currently a regular user and do not have access to change settings, but you can backup and restore backups. Consider upgrading to Pro, it would help this college student out. If not, leaving a review would be appreciated. Anyways, Enjoy!"
            android:textColor="@color/blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <TextView
            android:id="@+id/account_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Account"
            android:textColor="@color/orange"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mode_setting" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/mode_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:checked="false"
            android:fontFamily="@font/baloo_bhai"
            android:text="Dark Mode  "
            android:textColor="@color/ultra_white"
            android:textSize="16sp"
            android:theme="@style/ThemeOverlay.Mode"
            app:layout_constraintEnd_toEndOf="@+id/account_settings"
            app:layout_constraintStart_toStartOf="@+id/account_settings"
            app:layout_constraintTop_toBottomOf="@+id/free_user"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:maxLines="3"
                    android:text=""
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:textColor="@color/blue"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sign_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:backgroundTint="@color/gray"
                        android:text="Sign Up"
                        app:cornerRadius="15dp"
                        android:textColor="@color/ultra_white"
                        android:textSize="14sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/log_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:backgroundTint="@color/gray"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="Login"
                        app:cornerRadius="15dp"
                        android:textColor="@color/ultra_white"
                        android:textSize="14sp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/space_one"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="2dp"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/logged_in_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sync"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        app:icon="@drawable/sync_icon"
                        app:iconPadding="0dp"
                        app:iconGravity="textEnd"
                        android:backgroundTint="@color/gray"
                        android:text="Sync"
                        app:cornerRadius="15dp"
                        android:textColor="@color/ultra_white"
                        android:textSize="14sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/upload"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:backgroundTint="@color/gray"
                        android:layout_marginHorizontal="10dp"
                        app:icon="@drawable/upload_icon"
                        app:iconGravity="textEnd"
                        app:iconPadding="5dp"
                        app:iconTint="@color/gray"
                        android:gravity="center"
                        android:text="Upload"
                        app:cornerRadius="15dp"
                        android:textColor="@color/ultra_white"
                        android:textSize="14sp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/space_two"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/last_upload"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_weight="50"
                        android:textColor="@color/blue"
                        android:textSize="16sp"/>

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/reminder_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:trackColorActive="@color/blue"
                    app:trackColorInactive="@color/ultra_white"
                    app:thumbColor="@color/ultra_white"
                    app:haloColor="@color/blue"
                    app:tickColorActive="@color/blue"
                    app:tickColorInactive="@color/greyish"
                    app:trackHeight="5dp"
                    android:valueFrom="0"
                    android:valueTo="14"
                    android:stepSize="1"
                    android:value="0"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="10dp"/>

                <TextView
                    android:id="@+id/reminder_occurrence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Remind every _ Days"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/ultra_white"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/backup_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Backup &amp; Restore (Local)"
            android:textColor="@color/orange"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_layout"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/backup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="99"
                        android:gravity="center_vertical"
                        android:text="Backup"
                        android:textColor="@color/ultra_white"
                        android:textSize="16sp"
                        android:textStyle="bold">
                    </TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/arrow_right_icon">
                    </ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_one"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/backup_beta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="99"
                        android:gravity="center_vertical"
                        android:text="Backup + Images"
                        android:textColor="@color/ultra_white"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/arrow_right_icon"></ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_two"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/restore_backup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="99"
                        android:gravity="center_vertical"
                        android:text="Restore Backup"
                        android:textColor="@color/ultra_white"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/arrow_right_icon"></ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_three"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/restore_beta_backup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="99"
                        android:gravity="center_vertical"
                        android:text="Restore Backup + Images"
                        android:textColor="@color/ultra_white"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/arrow_right_icon"></ImageView>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/note_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Note Preview Settings"
            android:textColor="@color/orange"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView5"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note_settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="106">

                <LinearLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="25"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="90"
                        android:gravity="center_vertical"
                        android:text="Title Lines"
                        android:textColor="@color/ultra_white"
                        android:textSize="16sp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/title_lines"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:gravity="center|right"
                        android:text="Default"
                        android:textColor="@color/ultra_white"
                        android:textSize="14sp"
                        android:textStyle="bold">
                    </TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/arrow_down">
                    </ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_four"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="2"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/preview_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="25"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="90"
                        android:gravity="center_vertical"
                        android:text="Content Lines"
                        android:textColor="@color/ultra_white"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/preview_lines"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:gravity="center|right"
                        android:text="Default"
                        android:textColor="@color/ultra_white"
                        android:textSize="14sp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/arrow_down"></ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_five"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="2"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/show_preview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="25"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="90"
                        android:gravity="center_vertical"
                        android:text="Show Preview"
                        android:textColor="@color/ultra_white"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/show_preview_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="10"
                        android:theme="@style/ThemeOverlay.MySwitchCompat"
                        android:layout_marginRight="5dp"
                        android:checked="true">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_six"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="2"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/show_note_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="25"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="90"
                        android:gravity="center_vertical"
                        android:text="Show Info"
                        android:textColor="@color/ultra_white"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/show_info_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="10"
                        android:theme="@style/ThemeOverlay.MySwitchCompat"
                        android:layout_marginRight="5dp"
                        android:checked="true">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/layout_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layout"
            android:textSize="16sp"
            android:fontFamily="@font/baloo_bhai"
            android:textColor="@color/orange"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView5">
        </TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_setting">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="99"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/grid"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="33"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/grid_icon"></ImageView>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/row"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="33"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:rotation="90"
                        android:src="@drawable/row_icon"></ImageView>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/staggered"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="33"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/staggered_icon"></ImageView>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/folder_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Folder Settings"
            android:textColor="@color/orange"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_layout"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/folder_settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/folder_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
