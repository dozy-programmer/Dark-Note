<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Drag Handle -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/drag_handle"
            android:layout_width="50dp"
            android:layout_height="6dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="?primaryStrokeColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Select Media"
            android:textColor="?secondaryTextColor"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/drag_handle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Media Options Container -->
        <LinearLayout
            android:id="@+id/media_options_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="20dp"
            android:divider="@android:color/transparent"
            android:showDividers="middle"
            android:dividerPadding="12dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Camera -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/camera_media"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="?secondaryBackgroundColor"
                app:strokeColor="?primaryStrokeColor"
                app:strokeWidth="2dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/camera_icon"
                        android:tint="?primaryIconTintColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Camera"
                        android:textSize="16sp"
                        android:textColor="?primaryTextColor"
                        android:fontFamily="@font/baloo_bhai" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- System Photo Picker -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/gallery_media"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="?secondaryBackgroundColor"
                app:strokeColor="?primaryStrokeColor"
                app:strokeWidth="2dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_image"
                        android:tint="?primaryIconTintColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="System Photo Picker"
                        android:textSize="16sp"
                        android:textColor="?primaryTextColor"
                        android:fontFamily="@font/baloo_bhai" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Local Files -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/local_files_media"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="?secondaryBackgroundColor"
                app:strokeColor="?primaryStrokeColor"
                app:strokeWidth="2dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/folder_icon"
                        android:tint="?primaryIconTintColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Browse Files"
                        android:textSize="16sp"
                        android:textColor="?primaryTextColor"
                        android:fontFamily="@font/baloo_bhai" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>